<Page
    x:Class="PrintersApp.Pages.PrintersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrintersApp.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PrintersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="Поиск" />
                <Button Content="Фильтр" />
                <CheckBox Content="Фильтр 1" />
            </StackPanel>
            <DataGrid x:Name="DataGridPrinters">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Id}" Header="Код" />
                    <DataGridTextColumn Binding="{Binding Path=Name}" Header="Наименование" />
                    <DataGridTextColumn Binding="{Binding Path=InventoryNumber}" Header="Инвентарный номер" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
